@model SAT.DATA.EF.Models.Enrollment

@{
	ViewData["Title"] = "Create";
}

<h1 class="text-center">Create</h1>

<h4 class="text-center">Enrollment</h4>
<hr />
<div class="row">
	<div class="offset-4 col-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="row">
				<div class="form-group col-4">
					<label asp-for="StudentId" class="control-label">Student Name</label>
					<select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
				</div>
				<div class="form-group col-4">
					<label asp-for="EnrollmentDate" class="control-label"></label>
					<input asp-for="EnrollmentDate" class="form-control" />
					<span asp-validation-for="EnrollmentDate" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="ScheduledClassId" class="control-label">Course Selection</label>
				<select asp-for="ScheduledClassId" class="form-control" asp-items="ViewBag.ScheduledClassId"></select>
			</div>

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div class="offset-5 col-3">
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
